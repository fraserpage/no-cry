{
    "name": "fraserpage/no-cry-cli",
    "description": "No-cry: A CLI tool that makes updating Wordpress plugins and WP Core (hopefully) not want to make you cry.",
    "keywords": ["wordpress", "wp-cli", "plugins", "cli"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/fraserpage/no-cry/issues",
        "source": "https://github.com/fraserpage/no-cry"
    },
    "authors": [
        {
            "name": "Fraser Page",
            "email": "fraser.page@briteweb.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "laravel-zero/framework": "^8.8",
        "wp-cli/wp-cli": "^2.5",
        "wp-cli/wp-cli-bundle": "^2.5"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.3",
        "pestphp/pest": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["no-cry"]
}
